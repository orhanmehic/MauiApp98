<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp98.Views.Register"
             Title="Register">
    
    <StackLayout Orientation="Vertical">
        <Entry Placeholder="Username" x:Name="UsernameEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="ConfirmPasswordEntry" />

        <Button Text="Register" Clicked="RegisterUser" ></Button>
        <Button Clicked="mainpage" Text="back to main"></Button>
    </StackLayout>
    
</ContentPage>