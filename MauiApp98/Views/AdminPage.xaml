<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp98.Views.AdminPage"
             Title="AdminPage"
             BackgroundImageSource="admin_pozadina.png">
    <VerticalStackLayout>
        
        <Label 
            Text="Welcome to .NET MAUI admin page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        
        <Label Text="What would you like to do?"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="24"/>
        
        <StackLayout Margin="40, 30, 75, 20">
            <Button WidthRequest="180" Text="Games Management" Clicked="adminGames" Margin="0, 0, 20, 0"></Button>
            <Button WidthRequest="180" Text="Users Management" Clicked="adminUsers"></Button>
        </StackLayout>
        
        
        <Button WidthRequest="90" Text="Go baack" Clicked="backpage" ></Button>
        
        
    </VerticalStackLayout>
    
</ContentPage>